<div class="container">
    <h1 class="mt-5">Posts</h1>

    <div class="row">
        <% for(let i=0; i<posts.length; i++){ %>
            <div class="col-md-4 mb-2">
                <div class="card" style="width: 18rem;">
                    <img src="https://image-placeholder.com/images/actual-size/320x200.png" class="card-img-top"
                        alt="placeholder image">
                    <div class="card-body">
                        <h3 class="text-start text-uppercase fs-6 fw-bolder">
                            <%= posts[i].title.substring(0, 20) + "..." %>
                        </h3>
                        </h3>
                        <p class="card-text">
                            <%= posts[i].body.substring(0, 50) %>
                        </p>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</div>